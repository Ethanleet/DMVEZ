<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_dmv" tools:context=".DMVActivity"
    android:id="@+id/yay">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollable"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="382dp" android:layout_height="fill_parent"
            android:background="#4fca02" app:popupTheme="@style/AppTheme.PopupOverlay" />
        <Button android:layout_height="28dp"
            android:layout_width="wrap_content"
            android:onClick="randomize"
            android:text="Shuffle"
            android:layout_marginTop="15dp"
            android:background="#4fca02">
        </Button>

    </LinearLayout>

</ScrollView>